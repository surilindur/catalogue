{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "tsconfig.ts",
    "bin/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}